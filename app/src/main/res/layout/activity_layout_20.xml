<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.spnj.tugasfoodsy.Layout_20Activity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="17dp"
            android:layout_marginRight="17dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginLeft="-50dp"
                android:text="@string/pay_det"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"/>

            <ImageButton
                android:contentDescription="@string/back_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@android:color/transparent"
                android:src="@drawable/shop_cart"/>

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/toolbar"
        android:paddingTop="30dp"
        android:paddingLeft="55dp"
        android:paddingRight="55dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="#e5e5e5"
            android:layout_gravity="center_horizontal"/>
        <EditText
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#e5e5e5"
            android:hint="@string/payment_detail1"
            android:gravity="center"/>
        <EditText
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#e5e5e5"
            android:hint="@string/payment_detail2"
            android:gravity="center"/>
        <EditText
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#e5e5e5"
            android:hint="@string/payment_detail3"
            android:gravity="center"/>
        <EditText
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#e5e5e5"
            android:hint="@string/payment_detail4"
            android:gravity="center"/>

    </LinearLayout>
    <Button
        android:id="@+id/buttonDelivery"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="35dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonround"
        android:text="@string/process3"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:onClick="pay"/>

</RelativeLayout>
